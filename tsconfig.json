{
    "compilerOptions": {
        "target": "es6",
        "jsx": "react",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "allowJs": true,
        "checkJs": false,
        "paths": {
            "App": [
                "src/App"
            ],
            "Pages/*": [
                "src/Pages/*"
            ],
            "Components/*": [
                "src/components/*"
            ],
        },
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ],
    },
    "include": [
        "src/**/*",
        "server"
    ],
    "exclude": [
        "node_modules"
    ]
}